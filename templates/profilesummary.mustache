
<div class="card mb-0">
    <div class="card-header d-flex align-items-center p-0">
        <div class="col-8 py-2" style="height: 120px; overflow: auto;">
            <div class="row">
                {{#hasidentity}}
                {{#identity}}
                <dl class="col-sm-6 col-md-4 col-lg-3 mb-2">
                    <dd class="small mb-0">{{name}}</dd>
                    <dt>{{#value}}{{value}}{{/value}}{{^value}}-{{/value}}</dt>
                </dl>
                {{/identity}}
                {{/hasidentity}}
            </div>
        </div>
        <div class="col-4 d-flex align-items-center">
            {{{user.picture}}}
            <div class="ml-2">
                <h3 class="card-title mb-1 d-inline mr-1"><span class="">{{{user.fullname}}}</span>
                </h3><span id="currentstatus"></span>
                <div class="d-flex flex-column">
                    <div class="small text-muted">{{#str}}lastaccess, enrol_gapply{{/str}}{{{user.lastaccess}}}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body m-0 p-0">
        <div style="height: calc(100vh - 4rem - 120px);" class="d-flex">
            <div class="fileview col-8 border-right px-0">
                <div class="select-input px-3"></div>
                <div id="viewer" class="text-center" style="height: calc(100vh - 7.25rem - 120px); overflow-y: auto;position: relative;">
                </div>
            </div>
            <div class="textview col-4 p-0">
                <h3 class="p-2 mb-0">{{#str}}applicationtext,enrol_gapply{{/str}}</h3>
                <div id="applicationtext" class="px-2" style="height: calc(78vh - 65px);overflow-y: auto;">

                </div>
                <div class="d-flex p-2 bg-light" style="position: absolute; width: 100%; bottom: 0;">
                    <button   class="btn alert-success mr-1 action-button" data-action="approve" data-toggle="tooltip"
                        data-original-title="{{#str}}approve,enrol_gapply{{/str}}"><i class="fa fa-fw fa-check"></i></button>
                    <button   class="btn alert-info mr-1 action-button" data-action="waitlist" data-toggle="tooltip"
                        data-original-title="{{#str}}waitlist,enrol_gapply{{/str}}"><i class="fa fa-fw fa-stopwatch"></i></button>
                    <button   class="btn alert-warning mr-1 action-button" data-action="reject"  data-toggle="tooltip"
                        data-original-title="{{#str}}reject,enrol_gapply{{/str}}"><i class="fa fa-fw fa-times"></i></button>
                    <button   class="btn alert-danger mr-1 action-button" data-action="delete"  data-toggle="tooltip"
                        data-original-title="{{#str}}delete,enrol_gapply{{/str}}"><i class="fa fa-fw fa-trash"></i></button>
                    <button   class="btn btn-secondary ml-auto text-uppercase font-weight-bold"  data-dismiss="modal">{{#str}}close,enrol_gapply{{/str}}</button>
                </div>
            </div>
        </div>
    </div>
</div>